@page "/home"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@inject Sesion Sesion

<PageTitle>Centro de Eventos - Inicio</PageTitle>


    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron bg-primary text-white p-4 rounded mb-4">
                    <h1 class="display-4">¡Bienvenido al Centro de Eventos!</h1>
                    <p class="lead">Hola @Sesion.UsuarioActual?.Nombre @Sesion.UsuarioActual?.Apellido</p>
                    <p>Gestiona eventos, usuarios y controla el acceso desde un solo lugar.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Personas</h5>
                        <p class="card-text">Administra el listado de todas las personas registradas.</p>
                        <a href="listado-personas" class="btn btn-primary">Ver Listado</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-person-fill display-4 text-success mb-3"></i>
                        <h5 class="card-title">Reserva</h5>
                        <p class="card-text">Gestiona el listado de todas las reservas registradas </p>
                        <a href="listado-reserva" class="btn btn-success">Ver Reserva</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-event-fill display-4 text-warning mb-3"></i>
                        <h5 class="card-title">Eventos Deportivos</h5>
                        <p class="card-text">Organiza y gestiona todos los eventos deportivos.</p>
                        <a href="listado-eventos" class="btn btn-warning">Ver Eventos</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check-fill display-4 text-danger mb-3"></i>
                        <h5 class="card-title">Control de Acceso</h5>
                        <p class="card-text">Administra los permisos y el control de acceso.</p>
                        <a href="control-acceso" class="btn btn-danger">Ir a Control</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Acciones Rápidas</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <a href="crearusuario" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-person-plus-fill me-2"></i>Crear Nuevo Usuario
                                </a>
                            </div>
                            <div class="col-md-6 mb-2">
                                <button class="btn btn-outline-secondary w-100" @onclick="CerrarSesion">
                                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


@code {
 

    private void CerrarSesion()
    {

        NavigationManager.NavigateTo("/");
    }
}