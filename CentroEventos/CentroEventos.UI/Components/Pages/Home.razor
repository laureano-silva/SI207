@page "/home"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@inject Sesion Sesion

@if (!Sesion.EstaLogueado())
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert alert-info text-center">
                    <i class="bi bi-person-lock" style="font-size: 3rem; color: #084298;"></i>
                    <h4 class="mt-3">Acceso Restringido</h4>
                    <p class="mb-3">Debés iniciar sesión para acceder al sistema.</p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron bg-primary text-white p-4 rounded mb-4">
                    <h1 class="display-4">¡Bienvenido al Centro de Eventos!</h1>
                    <p class="lead">Hola @Sesion.UsuarioActual?.Nombre @Sesion.UsuarioActual?.Apellido</p>
                    <p>Gestioná eventos, usuarios y control de accesos desde un solo lugar.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column text-center">
                        <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Personas</h5>
                        <p class="card-text">Administra el listado de todas las personas registradas.</p>
                        <a href="listado-personas" class="btn btn-primary mt-auto">Ver Personas</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column text-center">
                        <i class="bi bi-person-fill display-4 text-success mb-3"></i>
                        <h5 class="card-title">Reserva</h5>
                        <p class="card-text">Gestiona el listado de todas las reservas registradas.</p>
                        <a href="listado-reservas" class="btn btn-success mt-auto">Ver Reservas</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column text-center">
                        <i class="bi bi-calendar-event-fill display-4 text-warning mb-3"></i>
                        <h5 class="card-title">Eventos Deportivos</h5>
                        <p class="card-text">Organiza y gestiona todos los eventos deportivos.</p>
                        <a href="listado-eventos" class="btn btn-warning mt-auto">Ver Eventos</a>
                    </div>
                </div>
            </div>

            @if (Sesion.UsuarioActual?.Permisos.Contains(Permiso.GestionUsuarios) == true)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column text-center">
                            <i class="bi bi-house-fill display-4 text-danger mb-3"></i>
                            <h5 class="card-title">Control de Acceso</h5>
                            <p class="card-text">Administra los datos, permisos y credenciales de los usuarios.</p>
                            <a href="control-acceso" class="btn btn-danger mt-auto">Acceder</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
