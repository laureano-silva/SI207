@page "/"
<PageTitle>Login</PageTitle>

<h3>Iniciar Sesión</h3>

<div class="card p-4 shadow" style="max-width: 400px;">
    <div class="form-group">
        <label for="username">Usuario</label>
        <input @bind="username" class="form-control" id="username" placeholder="Ingrese su usuario" />
    </div>

    <div class="form-group mt-3">
        <label for="password">Contraseña</label>
        <input @bind="password" type="password" class="form-control" id="password" placeholder="Ingrese su contraseña" />
    </div>

    <div class="mt-4">
        <button class="btn btn-primary w-100" @onclick="Login">Ingresar</button>
    </div>

    <div class="mt-2 text-center">
        <a href="/crearusuario">Crear usuario</a>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";

    private void Login()
    {
        Console.WriteLine($"Intentando login con: {username} / {password}");
    }
}